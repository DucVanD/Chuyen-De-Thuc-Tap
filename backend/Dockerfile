# S·ª≠ d·ª•ng PHP 8.2 v·ªõi Apache
FROM php:8.2-apache

# C√†i c√°c g√≥i h·ªá th·ªëng v√† PHP extension c·∫ßn thi·∫øt
RUN apt-get update && apt-get install -y \
    git zip unzip libzip-dev libpng-dev libonig-dev libxml2-dev && \
    docker-php-ext-install pdo pdo_mysql zip && \
    a2enmod rewrite && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# Sao ch√©p composer t·ª´ image ch√≠nh th·ª©c
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Thi·∫øt l·∫≠p th∆∞ m·ª•c l√†m vi·ªác
WORKDIR /var/www/html
COPY . /var/www/html

# C√†i ƒë·∫∑t package Laravel
RUN composer install --no-dev --optimize-autoloader

# T·∫°o APP_KEY n·∫øu ch∆∞a c√≥
RUN php artisan key:generate --force || true

# Clear & cache l·∫°i to√†n b·ªô config ƒë·ªÉ tƒÉng t·ªëc
RUN php artisan config:clear && \
    php artisan route:clear && \
    php artisan view:clear && \
    php artisan config:cache && \
    php artisan route:cache && \
    php artisan view:cache

# Ph√¢n quy·ªÅn cho storage v√† cache
RUN chmod -R 777 storage bootstrap/cache || true

# C·∫•u h√¨nh Apache tr·ªè v·ªÅ public/
ENV APACHE_DOCUMENT_ROOT=/var/www/html/public
RUN sed -ri -e 's!/var/www/html!${APACHE_DOCUMENT_ROOT}!g' /etc/apache2/sites-available/*.conf && \
    sed -ri -e 's!/var/www/!${APACHE_DOCUMENT_ROOT}!g' /etc/apache2/apache2.conf /etc/apache2/conf-available/*.conf

# EXPOSE: Render v·∫´n d√πng port 10000, kh√¥ng c·∫ßn ƒë·ªïi
EXPOSE 10000

# üëâ KH√îNG d√πng `php artisan serve` (v√¨ ch·∫≠m)
# Laravel ƒë√£ n·∫±m trong /var/www/html/public, Apache t·ª± ch·∫°y
CMD ["apache2-foreground"]
